{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#e3f1fe",
    "data": { "url": "https://raw.githubusercontent.com/twuu0064/vis_2/refs/heads/main/data/census_age.csv"},
    "transform": [
      {"calculate": "datum.Sex == 'Female' ? -datum.Num_of_Australians : datum.Num_of_Australians", "as": "signed_people"}
    ],
    "width": 800,
    "height": 400,
    "mark": "bar",
    "params": [
      {"name": "select", "select": "point"}
    ],
    "encoding": {
      "y": {
        "field": "Age_Group", "title": "Age Group", "sort": ["0-4 years", "5-9 years"]
      },
      "x": {
        "aggregate": "sum", "field": "signed_people",
        "title": "Australian Population",
        "axis": {"format": "s"}
      },
      "fillOpacity": {
        "condition": {"param": "select", "value": 1},
        "value": 0.3
      },
      "color": {
        "field": "Sex",
        "scale": {"range": ["#ca8861", "#675193"]},
        "legend": {"orient": "top", "title": "Sex"}
      },
      "tooltip": [{"field":"Sex"}, {"field": "Num_of_Australians", "format": ",", "title": "Number of Australians"}]
    },
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
  }
  